{
  "compilerOptions": {
    "target": "es2024",
    "module": "ESNext",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "es2024"
    ],
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@plyaz/*": ["packages/*/src"],
      "@config/vitest": ["configs/vitest.config.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "allowJs": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "types": ["next", "react", "react-dom", "vitest", "vitest/config", "node", "vitest/globals"]
  },
  "rules": {
    "no-redeclare": "off",
    "@typescript-eslint/no-redeclare": "error"
  },
  "include": ["src", "configs", "storybook"],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
