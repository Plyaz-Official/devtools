{
  "name": "@plyaz/devtools",
  "version": "1.2.7",
  "description": "Internal development tools and utilities for the Plyaz ecosystem, including debugging helpers, shared configs, and dev-time enhancements.",
  "main": "index.js",
  "scripts": {
    "build": "pnpm clean && tsc -p tsconfig.json",
    "test": "vitest run",
    "release:publish": "pnpm publish --access public",
    "publish:ci": "pnpm publish --access public --no-git-checks",
    "lint": "eslint ./examples/backend ./examples/frontend ./examples/package",
    "lint:fix": "eslint ./examples/backend ./examples/frontend ./examples/package",
    "format": "prettier --write './**/*.{js,ts,tsx,js,jsx,mjs,cjs}'",
    "format:check": "prettier --check './**/*.{js,ts,tsx,js,jsx,mjs,cjs}'",
    "type:check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "release": "standard-version"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^6.6.2",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@eslint/markdown": "^6.5.0",
    "@nestjs/common": "^11.1.3",
    "@next/eslint-plugin-next": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-mdx": "^3.5.0",
    "eslint-plugin-functional": "^4.4.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.13.5",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-markdownlint": "^0.9.0",
    "eslint-plugin-mdx": "^3.5.0",
    "eslint-plugin-n": "^17.20.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-regexp": "^2.9.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-better-tailwindcss": "3.2.1",
    "eslint-plugin-testing-library": "^6.5.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jiti": "^2.4.2",
    "markdownlint": "^0.38.0",
    "prettier": "^3.5.3",
    "next": "15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "standard-version": "^9.5.0",
    "typescript-eslint": "^8.34.0",
    "vitest": "^3.1.3"
  },
  "peerDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^6.6.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.30.0",
