{
  "extends": "./configs/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": false,
    "moduleResolution": "bundler"
  },
  "include": [
    "scripts/**/*.ts",
    "configs/**/*.ts",
    "env/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
